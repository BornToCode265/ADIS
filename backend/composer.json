{
  "name": "backend",
  "description": "ADIS - Automated Drip Irrigation System Backend API",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "ADIS Development Team",
      "email": "dev@adis.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "ADIS\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ADIS\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "start": "php -S localhost:8000 -t api/"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
